# Optional: For AI resume analysis
AI_PROVIDER=openai
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_MODEL=gpt-4o-mini

# Optional: Gemini
GEMINI_API_KEY=your_gemini_api_key
